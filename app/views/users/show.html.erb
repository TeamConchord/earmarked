<div class="container-fluid row">
  <div class="col-md-offset-4 col-md-4" align="center" id="user_names">
    <h2><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h2>
  </div>
</div>

<br><br>

<div class="container-fluid row">
  <div class="col-md-offset-3 col-md-3" align="center">
    <%= link_to "View 2016 Candidates", candidates_path, class: "btn btn-primary", id: "candidates_button" %>
  </div>
  <div class="col-md-3" align="center">
    <%= link_to "View 2016 Issues", issues_path, class: "btn btn-primary", id: "issues_button" %>
  </div>
</div>


<br><br>

<div class="container-fluid row">
  <div class="col-md-offset-3 col-md-3" align="center" id="stances_supported">
    <h3>Completed Orders</h3>
      <table class="table table-striped table-bordered table-hover" id="donation-table">
        <tr>
          <th>Order Number</th>
          <th>Amount</th>
          <th>Date</th>
        </tr>
        <% @orders_completed.each do |order| %>
        <tr>
          <td id="cart-td"><%= order.id %></td>
          <td id="cart-td"><%= number_to_currency(order.total) %></td>
          <td id="cart-td"><%= order.created_at.strftime("%B %d, %Y") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

