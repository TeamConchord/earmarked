<div class="container row">
  <div class="col-md-5">

  </div>
  <div class="col-md-5">
    <table class="table table-striped">
      <tr>
        <th>Candidate</th>
        <th>Issue</th>
        <th>Amount Donated</th>
      </tr>
      <% cart.donations.each do |donation| %>
      <tr>
        <td><%= donation.candidate.name %></td>
        <td><%= donation.issue.topic %></td>
        <td><%= donation.amount %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
