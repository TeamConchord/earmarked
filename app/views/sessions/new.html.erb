<h3>Sign In</h3>

<%= form_for :login, url: login_path do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Login" %>
<% end %>

<div class="col-md-3">
  <ul>
    <li><%= render partial: "layouts/flashes" %></li>
  </ul>
</div>
