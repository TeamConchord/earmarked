<!-- Page Content -->
<div class="container" id="candidates">
   <!-- Page Header -->
  <div class="row">
    <div class="col-lg-12">
       <h1 class="page-header">Candidates
           <small>Presidential hopefuls for the 2016 Election</small>
       </h1>
    </div>
  </div>
   <!-- /.row -->

   <!-- Projects Row -->
  <div class="row">
    <h2 class="well" align="center">Republicans</h2>
    <% @republicans.each do |candidate| %>
      <div class="col-md-4 portfolio-item">
        <a href="#">
           <img class="img-responsive" src="http://ste.india.com/sites/default/files/styles/zm_700x400/public/2015/09/03/397575-donald-trump.jpg?itok=aa4HugNl" alt="">
        </a>
        <h3>
           <%= link_to candidate.name, candidate_path(candidate) %>
        </h3>
        <p><%= candidate.bio %></p>
      </div>
    <% end %>
  </div>
   <!-- /.row -->

   <!-- Projects Row -->
  <div class="row">
    <h2 class="well" align="center">Democrats</h2>
    <% @democrats.each do |candidate| %>
     <div class="col-md-4 portfolio-item">
         <a href="#">
             <img class="img-responsive" src="http://placehold.it/700x400" alt="">
         </a>
         <h3>
          <%= link_to candidate.name, candidate_path(candidate) %>
         </h3>
         <p><%= candidate.bio %></p>
     </div>
    <% end %>
  </div>
