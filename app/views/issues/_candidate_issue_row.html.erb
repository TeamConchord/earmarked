<%= candidate_issue.name %>

<%= candidate_issue.stance %>

<%= form_for Donation.new, url: donations_path do |f| %>
  <%= f.label :amount %>
  <%= f.hidden_field :candidate_issue_id, value: candidate_issue.id %>
  <%= f.text_field :amount %>
  <%= f.hidden_field :issue_id, value: candidate_issue.issue_id %>
  <%= f.submit "Donate" %>
<% end %>