<header id="myCarousel" class="carousel slide">
  <div class="fill" id="slider-1"></div>
</header>

<div class="container">
  <div class="row" "col-lg-8">
    <h1 class="page-header" id="title-1"><%= @issue.topic %></h1>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <p id="header-intro"><%= @issue.description %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <ul class="list-group" id="stances">
        <% @issue.candidate_issues.each do |candidate_issue| %>
          <li class="list-group-item" id="<%= candidate_issue.id %>">
            <%= render partial: "candidate_issue_row",
                       locals: {candidate_issue: candidate_issue} %>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<script>
$(function() {
  $( "#accordion" ).accordion();
});
</script>
